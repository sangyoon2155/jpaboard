<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
{{>layouts/header}}

{{#board}}
<form class="container" action="/articles/addBoard" method="post">
    <input name="boardNo" type="hidden" value="{{boardNo}}">
    <div class="mb-3">
        <label class="form-label">제목</label>
        <input type="text" class="form-control" name="boardTitle" value="{{boardTitle}}">
    </div>
    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea class="form-control" rows="3" name="boardContent">{{board_content}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    
</form>
{{/board}}

{{>layouts/footer}}

</body>
</html>