<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
{{>layouts/header}}


<table class="table">
    <thead>
    <tr>
        <th scope="col">BoardNO</th>
        <th scope="col">BoardTitle</th>
        <th scope="col">BoardContent</th>
    </tr>
    </thead>
    <tbody>
    {{#board}}
    <tr>
        <th>{{boardNo}}</th>
        <td>{{boardTitle}}</td>
        <td>{{boardContent}}</td>
    </tr>
    
    </tbody>
</table>

	<a href="/board/modifyBoard?boardNo={{board.boardNo}}" class="btn btn-primary">Edit</a>
	<a href="/board/deleteBoard?boardNo={{board.boardNo}}" class="btn btn-danger">Delete</a>
	<a href="/board/boardList">Go to Board List</a>
	{{/board}}

{{>layouts/footer}}
